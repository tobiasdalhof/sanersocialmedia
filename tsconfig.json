{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@types/node"
    ],
    "paths": {
      "@sanersocialmedia/core/*": ["packages/core/src/*"],
      "@sanersocialmedia/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": [
    "packages/*/src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "website/**/*.ts",
    "website/**/*.d.ts",
    "website/**/*.tsx",
    "website/**/*.vue"
  ]
}
